<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivFoto"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:src="@drawable/recurso_5"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            />

        <LinearLayout
            android:layout_marginLeft="@dimen/left_margin_image_cv"
            android:layout_marginRight="@dimen/left_margin_image_cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/tvnombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="30sp"
                android:layout_marginLeft="@dimen/padding_image" />

            <ImageButton
                android:id="@+id/ibLike"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:src="@drawable/dog_bone_48"
                android:background="@color/colorAccentText"
                />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
